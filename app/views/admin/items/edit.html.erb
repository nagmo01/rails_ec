<%= form_with model: @item, url: admin_item_path(@item), method: :patch do |f| %>
  <p>
    <%= f.label(:name, "商品名") %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :price, "値段" %>
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :sku, "型番" %>
    <%= f.text_field :sku %>
  </p>
  <p>
    <%= f.label :description, "説明" %>
    <%= f.text_area :description %>
  </p>
  <%= f.file_field :image %>
  <div><%= image_tag @item.image.variant(resize_to_fit: [150, 150]) if @item.image.attached? %></div>
  <%= f.submit "更新" %>
<% end %>
<%= link_to "戻る", admin_items_path %>
