<!-- Section-->
<h1 class="text-center">管理者ページ</h1>
<section class="py-5">
  <div class="container px-4 px-lg-5 mt-5">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% @items.each do |item| %>
        <div class="col mb-5">
          <div class="card h-100">
            <!-- Sale badge-->
            <!-- Product image-->
            <%= image_tag item.image, class: "w-100 h-50" if item.image.attached?   %>
            <!-- Product details-->
            <div class="card-body p-4">
              <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder"><%= item.name %></h5>
                <!-- Product price-->
                <p><%= item.price %>円</p>
                <p>型番: <%= item.sku %></p>
                <p><%= item.description %></p>
                
              </div>
            </div>
            <!-- Product actions-->
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
              <div class="text-center"><%= link_to("Edit", "/admin/#{item.id}/edit" ) %></div>
              <div class="text-center"><%= link_to "delete", "/admin/#{item.id}", data: { "turbo-method": :delete, turbo_confirm: "You sure?" } %></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

